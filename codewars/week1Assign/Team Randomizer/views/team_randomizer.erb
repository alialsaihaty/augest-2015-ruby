<h1 style="text-align: center">Team Randomizer</h1>

<form action="/team_randomizer" method="post">

  <div class="">
    <label for="names" style="display: inline-block; margin-bottom: 5px; max-width: 100%; font-weight:bold; margin-left: 55px">Names</label><br>
    <textarea name="names" rows="8" cols="40" style="width: 90%; height: auto; margin-top: 10px; padding: 8px 12px; border: 1px solid #0C0C0C; border-radius: 10px; display: block; margin-left: auto; margin-right: auto"><%= @names %></textarea>
  </div>

  <div style="margin-top: 20px">
    <label style="display: inline-block; margin-bottom: 5px; max-width: 100%; font-weight:bold; margin-left: 55px">Number of Teams</label>
    <input type="text" name="number_of_teams" value="<%= @num %>" style="width: 90%; height: auto; padding: 8px 12px; font-size: 14px; border: 1px solid #0C0C0C; margin-top: 10p; border-radius: 10px; display: block; margin-left: auto; margin-right: auto">
  </div>

  <div style="margin-top: 20px">
    <input type="submit" name="name" value="Generate Teams" style="color: #ffffff; background-color: #dd4814; border-color: #dd4814; padding: 8px 12px; font-size: 14px; border-radius: 10px; margin-bottom: 20px; margin-left: 55px">
  </div>

</form>

<% if @splitting %>
  <hr>
  <table border="0" style="width:100%">
    <thead>
      <tr style="height: 70px; font-size: 50px">
        <th>Team #</th>
        <th>Team Members</th>
      </tr>
    </thead>
    <tbody style="text-align: center; font-size: 25px">
      <% @num.times do |count| %>
      <tr>
        <td>Team <%= count+1 %></td>
        <td><%= @splitting[count].join(", ") %></td>
      </tr>
      <% end %>
      </tr>
    </tbody>
  </table>
<% end %>

